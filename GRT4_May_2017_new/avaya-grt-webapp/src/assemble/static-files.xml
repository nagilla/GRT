<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>static-files</id>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
	 <fileSet>
	  <directory>src/main/webapp/media</directory>
	  <outputDirectory>/media</outputDirectory>
	 </fileSet>
	
	 <fileSet>
	  <directory>src/main/webapp/images</directory>
	  <outputDirectory>/images</outputDirectory>
	 </fileSet>
	 
	 <fileSet>
	  <directory>src/main/webapp/styles</directory>
	  <outputDirectory>/styles</outputDirectory>
	 </fileSet>
	 
	 <fileSet>
	  <directory>src/main/webapp/scripts</directory>
	  <outputDirectory>/scripts</outputDirectory>
	 </fileSet>
	 <fileSet>
	  <directory>src/main/webapp/fonts</directory>
	  <outputDirectory>/fonts</outputDirectory>
	 </fileSet>
	 <fileSet>
	  <directory>src/main/webapp/downloads</directory>
	  <outputDirectory>/downloads</outputDirectory>
	 </fileSet>
  </fileSets>
</assembly>